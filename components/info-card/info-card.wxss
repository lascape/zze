.info-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.author-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.author-name {
  font-size: 28rpx;
  color: #333;
}

.post-time {
  font-size: 24rpx;
  color: #999;
}

.card-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.title-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  flex: 1;
}

.description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.images {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

.post-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
}

.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 16rpx;
  border-top: 1px solid #f0f0f0;
}

.location {
  font-size: 24rpx;
  color: #999;
}

.params {
  display: flex;
  gap: 16rpx;
}

.param-item {
  font-size: 24rpx;
  color: #666;
}

.param-item.price {
  color: #ff6b6b;
  font-weight: 500;
}
