.my-posts-page {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.tabs-section {
  background-color: #fff;
}

.posts-list {
  padding: 20rpx;
}

.post-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.post-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.post-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.post-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.post-desc {
  font-size: 28rpx;
  color: #666;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.reject-reason {
  background-color: #fff1f0;
  border-left: 4rpx solid #ff4d4f;
  padding: 16rpx;
  border-radius: 8rpx;
}

.reason-label {
  font-size: 24rpx;
  color: #ff4d4f;
  font-weight: 500;
}

.reason-text {
  font-size: 24rpx;
  color: #666;
  margin-left: 8rpx;
}

.post-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 16rpx;
  border-top: 1px solid #f0f0f0;
}

.post-time {
  font-size: 24rpx;
  color: #999;
}

.actions {
  display: flex;
  gap: 16rpx;
}
