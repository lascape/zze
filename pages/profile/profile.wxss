/* pages/profile/profile.wxss */
.profile-tab {
  min-height: 100%;
  background-color: #f5f5f5;
  padding: 32rpx;
}

/* 用户信息卡片 */
.user-card {
  background-color: #fff;
  border-radius: 32rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
  flex: 1;
  min-width: 0;
}

.user-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 32rpx;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.user-details {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  flex: 1;
  min-width: 0;
}

.user-name-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.user-name {
  font-size: 28rpx;
  font-weight: 700;
  color: #000;
}

.user-badge {
  padding: 4rpx 16rpx;
  background-color: #f5f5f5;
  color: #666;
  font-size: 20rpx;
  border-radius: 8rpx;
}

.user-community {
  font-size: 22rpx;
  color: #999;
}

.edit-btn {
  font-size: 24rpx;
  color: #1677FF;
  flex-shrink: 0;
}

/* 功能菜单列表 */
.menu-list {
  background-color: #fff;
  border-radius: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
  overflow: hidden;
}

.menu-item {
  padding: 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.menu-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex: 1;
  /* min-width: 0; */
}

.menu-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.menu-icon.orange {
  background-color: #FFF7ED;
}

.menu-icon.rose {
  background-color: #FFF1F2;
}

.menu-icon.green {
  background-color: #ECFDF5;
}

.menu-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #000;
  /* white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis; */
}

.menu-divider {
  height: 2rpx;
  background-color: #f5f5f5;
  margin: 0 32rpx;
}
