/* index.wxss */
page {
  background-color: #f5f5f5;
  height: 100%;
}

.community-page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

/* 自定义顶部 */
.custom-header {
  background-color: #fff;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.status-bar {
  width: 100%;
  background-color: #fff;
}

.location-bar {
  padding: 24rpx 40rpx;
  background-color: #fff;
}

.location-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.community-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #000;
}

.title-bar {
  padding: 24rpx 40rpx;
  background-color: #fff;
  display: flex;
  align-items: baseline;
  gap: 16rpx;
}

.page-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #000;
}

.subtitle {
  font-size: 24rpx;
  color: #999;
}

/* 主内容区 */
.main-content {
  flex: 1;
  overflow-y: auto;
  z-index: 0;
}

/* Tab内容区 */
.tab-content {
  min-height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  gap: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 底部TabBar自定义样式 */
.tab-publish {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.publish-icon {
  position: fixed;
  left: 50%;
  bottom: 30rpx;
  transform: translateX(-50%);
  width: 100rpx;
  height: 100rpx;
  border-radius: 100rpx;
  background: linear-gradient(135deg, #FF6B35 0%, #FF8C69 100%);
  display: flex;
  z-index: 10;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 53, 0.3);
  border: 8rpx solid #fff;
}