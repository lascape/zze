.discovery-page {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.search-section {
  background-color: #fff;
  padding: 20rpx;
}

.range-selector {
  background-color: #fff;
  padding: 20rpx;
  display: flex;
  gap: 20rpx;
  border-bottom: 1px solid #f0f0f0;
}

.range-item {
  flex: 1;
  padding: 16rpx 32rpx;
  border-radius: 8rpx;
  text-align: center;
  background-color: #f5f5f5;
  color: #666;
  font-size: 28rpx;
  transition: all 0.3s;
}

.range-item.active {
  background-color: #0052D9;
  color: #fff;
}

.tabs-section {
  background-color: #fff;
  padding: 0 20rpx;
}

.posts-section {
  padding: 20rpx;
}

.posts-list {
  display: flex;
  flex-direction: column;
}
