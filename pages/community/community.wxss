.community-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

.community-selector {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx 32rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.community-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.arrow {
  font-size: 48rpx;
  color: #999;
}

.category-grid {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 32rpx;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.category-icon {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 28rpx;
}

.category-name {
  font-size: 24rpx;
  color: #666;
}

.posts-section {
  margin-top: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

.posts-list {
  display: flex;
  flex-direction: column;
}
