.chat-page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

.messages-scroll {
  flex: 1;
  padding: 20rpx;
}

.chat-info {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.info-text {
  font-size: 24rpx;
  color: #999;
  display: block;
}

.post-title {
  font-size: 26rpx;
  color: #666;
  display: block;
  margin-top: 8rpx;
}

.messages-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.message-item {
  display: flex;
  gap: 16rpx;
  align-items: flex-start;
}

.message-item.self {
  flex-direction: row-reverse;
}

.message-content {
  max-width: 500rpx;
  padding: 20rpx 24rpx;
  border-radius: 12rpx;
  background-color: #fff;
}

.message-item.self .message-content {
  background-color: #0052D9;
}

.message-text {
  font-size: 28rpx;
  color: #333;
  word-break: break-all;
}

.message-item.self .message-text {
  color: #fff;
}

.input-bar {
  background-color: #fff;
  padding: 20rpx;
  display: flex;
  gap: 16rpx;
  align-items: center;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.message-input {
  flex: 1;
}
