/* pages/discover/discover.wxss */
.discover-tab {
  padding-bottom: 20px;
}

.search-section {
  padding: 16px;
  background-color: #fff;
}

.tabs-section {
  background-color: #fff;
  border-bottom: 1px solid #f0f0f0;
}

.filter-section {
  margin: 12px 16px;
  padding: 16px;
  background-color: #fff;
  border-radius: 16px;
}

.filter-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12px;
}

.filter-title {
  font-size: 14px;
  font-weight: 600;
  color: #000;
}

.filter-reset {
  font-size: 12px;
  color: #1677FF;
}

.filter-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
}

.filter-tag {
  padding: 6px 16px;
  background-color: #f5f5f5;
  border-radius: 20px;
  font-size: 12px;
  color: #666;
}

.filter-tag.active {
  background-color: #FF6B35;
  color: #fff;
}

.list-section {
  padding: 0 16px 16px;
}

.list-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px 0;
}

.result-count {
  font-size: 13px;
  color: #666;
}

.sort-btn {
  display: flex;
  align-items: center;
  gap: 4px;
  font-size: 12px;
  color: #1677FF;
}

/* 动态列表 */
.post-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.post-item {
  background-color: #fff;
  border-radius: 16px;
  padding: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
}

/* 帖子头部 */
.post-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12px;
}

.user-info {
  display: flex;
  gap: 10px;
  align-items: center;
}

.avatar {
  width: 40px;
  height: 40px;
  border-radius: 20px;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
}

.user-meta {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.username {
  font-size: 14px;
  font-weight: 500;
  color: #000;
}

.post-time {
  font-size: 11px;
  color: #999;
}

/* 帖子内容 */
.post-content {
  margin-bottom: 12px;
}

.post-title {
  font-size: 16px;
  font-weight: 600;
  color: #000;
  margin-bottom: 8px;
  line-height: 1.5;
}

.post-desc {
  font-size: 14px;
  color: #666;
  line-height: 1.6;
  margin-bottom: 12px;
}

/* 图片网格 */
.post-images {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 8px;
  margin-bottom: 12px;
}

.image-item {
  aspect-ratio: 1;
  border-radius: 12px;
  overflow: hidden;
}

.image-item.single {
  grid-column: span 2;
  aspect-ratio: 16/9;
}

.post-image {
  width: 100%;
  height: 100%;
  display: block;
}

/* 详细信息卡片 */
.post-detail-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #f8f8f8;
  padding: 12px;
  border-radius: 12px;
}

.detail-price {
  display: flex;
  align-items: baseline;
  color: #FF3B30;
}

.price-symbol {
  font-size: 14px;
  font-weight: 600;
}

.price-value {
  font-size: 18px;
  font-weight: 700;
  margin: 0 2px;
}

.price-unit {
  font-size: 12px;
  color: #FF3B30;
}

.detail-info {
  display: flex;
  align-items: center;
  gap: 4px;
  font-size: 11px;
  color: #999;
}

/* 元信息 */
.post-meta {
  display: flex;
  gap: 8px;
  margin-top: 8px;
}

.meta-item {
  font-size: 12px;
  color: #666;
  padding: 4px 12px;
  background-color: #f5f5f5;
  border-radius: 16px;
}

/* 操作栏 */
.post-actions {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding-top: 12px;
  border-top: 1px solid #f0f0f0;
}

.action-btn {
  display: flex;
  align-items: center;
  gap: 4px;
  font-size: 12px;
  color: #666;
  padding: 4px 8px;
}

.action-contact {
  color: #1677FF;
  font-weight: 500;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60px 20px;
  gap: 12px;
}

.empty-text {
  font-size: 14px;
  color: #999;
}
