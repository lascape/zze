.messages-page {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.tabs-section {
  background-color: #fff;
}

.conversations-list {
  padding: 20rpx;
}

.conversation-item {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.conversation-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.conversation-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.user-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.time {
  font-size: 24rpx;
  color: #999;
}

.last-message {
  font-size: 28rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.notifications-list {
  padding: 20rpx;
}

.notification-item {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  display: flex;
  gap: 24rpx;
}

.notification-item.unread {
  background-color: #e6f0ff;
}

.notification-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #fff;
}

.notification-icon.approved {
  background-color: #52c41a;
}

.notification-icon.rejected {
  background-color: #ff4d4f;
}

.notification-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.notification-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.notification-desc {
  font-size: 28rpx;
  color: #666;
}
