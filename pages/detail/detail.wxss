.detail-page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

.content-scroll {
  flex: 1;
  padding: 20rpx;
  padding-bottom: 140rpx;
}

.author-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.author-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.author-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.post-time {
  font-size: 24rpx;
  color: #999;
}

.title-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
  display: block;
  margin-top: 12rpx;
}

.params-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.param-row {
  display: flex;
  justify-content: space-between;
  padding: 16rpx 0;
  border-bottom: 1px solid #f0f0f0;
}

.param-row:last-child {
  border-bottom: none;
}

.param-label {
  font-size: 28rpx;
  color: #999;
}

.param-value {
  font-size: 28rpx;
  color: #333;
}

.param-value.price {
  color: #ff6b6b;
  font-weight: 500;
}

.location-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.location-text {
  font-size: 28rpx;
  color: #666;
}

.description-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.description {
  font-size: 30rpx;
  color: #333;
  line-height: 1.8;
}

.images-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.post-image {
  width: 100%;
  border-radius: 8rpx;
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 20rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.action-text {
  font-size: 20rpx;
  color: #666;
}

.contact-btn {
  flex: 1;
}
