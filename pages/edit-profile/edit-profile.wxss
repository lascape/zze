.edit-profile-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

.form-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
}

.form-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.avatar-selector {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  padding: 40rpx 0;
}

.change-text {
  font-size: 24rpx;
  color: #0052D9;
}

.hint-text {
  font-size: 24rpx;
  color: #999;
  margin-top: 12rpx;
}

.save-section {
  margin-top: 80rpx;
}

.avatar-picker {
  background-color: #fff;
  padding: 40rpx;
  border-radius: 24rpx 24rpx 0 0;
}

.picker-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  text-align: center;
  margin-bottom: 32rpx;
}

.avatars-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 32rpx;
}

.avatar-item {
  display: flex;
  justify-content: center;
  padding: 16rpx;
  border-radius: 16rpx;
  border: 2px solid transparent;
  transition: all 0.3s;
}

.avatar-item.selected {
  border-color: #0052D9;
  background-color: #e6f0ff;
}
