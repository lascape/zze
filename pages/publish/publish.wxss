/* pages/publish/publish.wxss */
.publish-tab {
  min-height: 100%;
  background-color: #f5f5f5;
  padding: 32rpx;
}

/* 页面标题 */
.publish-header {
  margin-bottom: 32rpx;
}

.publish-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #000;
}

/* 提示信息 */
.publish-tips {
  background-color: #f5f5f5;
  border-radius: 32rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
}

.tips-text {
  font-size: 22rpx;
  color: #666;
  line-height: 1.6;
}

/* 发布类型选择 */
.publish-types {
  width: 100%;
}

.publish-col {
  margin-bottom: 24rpx;
}

.type-card {
  background-color: #fff;
  border-radius: 32rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
  transition: all 0.2s;
}

.type-card.blue {
  background-color: #EFF6FF;
}

.type-card.orange {
  background-color: #FFF7ED;
}

.type-card.green {
  background-color: #ECFDF5;
}

.type-card.purple {
  background-color: #FAF5FF;
}

.type-card:active {
  transform: scale(0.98);
  opacity: 0.8;
}

.type-icon-wrapper {
  width: 96rpx;
  height: 96rpx;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.type-icon-wrapper.blue-bg {
  background-color: #fff;
}

.type-icon-wrapper.orange-bg {
  background-color: #fff;
}

.type-icon-wrapper.green-bg {
  background-color: #fff;
}

.type-icon-wrapper.purple-bg {
  background-color: #fff;
}

.type-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  flex: 1;
  min-width: 0;
}

.type-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #000;
}

.type-desc {
  font-size: 22rpx;
  color: #999;
}
