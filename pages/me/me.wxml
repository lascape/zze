<view class="me-page">
  <!-- 用户信息 -->
  <view class="user-section" bindtap="onEditProfile">
    <system-avatar avatar="{{userInfo.avatar}}" size="large" />
    <view class="user-info">
      <text class="nickname">{{userInfo.nickname}}</text>
      <text class="edit-hint">点击编辑资料 ›</text>
    </view>
  </view>

  <!-- 统计信息 -->
  <view class="stats-section">
    <view class="stat-item" bindtap="onMyPosts">
      <text class="stat-number">{{myPostsCount}}</text>
      <text class="stat-label">我的发布</text>
    </view>
    <view class="divider"></view>
    <view class="stat-item" bindtap="onMyFavorites">
      <text class="stat-number">{{favoritesCount}}</text>
      <text class="stat-label">我的收藏</text>
    </view>
  </view>

  <!-- 功能列表 -->
  <view class="menu-section">
    <t-cell-group>
      <t-cell title="我的发布" arrow hover bind:click="onMyPosts" />
      <t-cell title="我的收藏" arrow hover bind:click="onMyFavorites" />
    </t-cell-group>
  </view>
</view>
