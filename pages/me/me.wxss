.me-page {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.user-section {
  background-color: #fff;
  padding: 60rpx 40rpx;
  display: flex;
  align-items: center;
  gap: 32rpx;
  margin-bottom: 20rpx;
}

.user-info {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.nickname {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
}

.edit-hint {
  font-size: 24rpx;
  color: #999;
}

.stats-section {
  background-color: #fff;
  padding: 40rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-bottom: 20rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.stat-number {
  font-size: 48rpx;
  font-weight: 500;
  color: #0052D9;
}

.stat-label {
  font-size: 28rpx;
  color: #666;
}

.divider {
  width: 1px;
  height: 80rpx;
  background-color: #f0f0f0;
}

.menu-section {
  margin-top: 20rpx;
}
