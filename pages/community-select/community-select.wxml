<view class="community-select-page">
  <view class="page-desc">请选择您所在的社区</view>
  
  <view class="communities-list">
    <view 
      wx:for="{{communities}}" 
      wx:key="id"
      class="community-item {{item.id === currentCommunityId ? 'active' : ''}}"
      data-id="{{item.id}}"
      bindtap="onCommunitySelect"
    >
      <view class="community-info">
        <text class="community-name">{{item.name}}</text>
        <text class="districts-info">{{item.districts.length}}个片区</text>
      </view>
      <t-icon wx:if="{{item.id === currentCommunityId}}" name="check" size="40rpx" color="#0052D9" />
    </view>
  </view>
</view>
